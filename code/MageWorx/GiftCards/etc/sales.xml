    <section name="order_invoice">
        <group name="totals">
            <item name="mageworx_giftcards_invoice" instance="MageWorx\GiftCards\Model\Total\Invoice\GiftCards" sort_order="340"/>
        </group>
    </section>

    <section name="order_creditmemo">
